<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/shot_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/shot_image"
            android:background="#373737" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:background="#ffF6F6EF">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/views"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/views"
                android:layout_toStartOf="@+id/views"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                tools:text="Very very lengthy title so it doesn't fit" />

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/time"
                android:layout_below="@id/title"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/secondary_text"
                android:textSize="12sp"
                tools:text="by SFCD" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toLeftOf="@+id/comments"
                android:layout_toStartOf="@+id/comments"
                android:drawableLeft="@drawable/ic_favorite_black_24dp"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/ic_favorite_black_24dp"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorAccent"
                tools:text="17" />

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:drawableLeft="@drawable/ic_message_black_24dp"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/ic_message_black_24dp"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorAccent"
                tools:text="5" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/likes"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="-3dp"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_date"
                android:gravity="center_vertical"
                android:textColor="@color/secondary_text"
                android:textSize="12sp"

                tools:text="Jul 30, 2014" />

            <TextView
                android:id="@+id/views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/likes"
                android:layout_toStartOf="@+id/likes"
                android:drawableLeft="@drawable/ic_visibility_black_24dp"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/ic_visibility_black_24dp"
                android:gravity="center_vertical"
                android:paddingBottom="3dp"
                android:paddingTop="5dp"
                android:textColor="@color/secondary_text"
                tools:text="122" />

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>